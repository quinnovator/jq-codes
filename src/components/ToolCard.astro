---
import { Icon } from 'astro-icon/components';
import Link from './Link.astro';

type Props = {
  name: string;
  description: string;
  icon: string;
  href: string;
  tags?: string[];
};

const { name, description, icon, href } = Astro.props;
---

<div
  class="not-prose rounded-xl border bg-background p-4 transition-colors duration-300 ease-in-out hover:bg-gray-100 dark:hover:bg-gray-900"
>
  <Link href={href} class="flex h-full flex-col">
    <div class="mb-2 flex items-center gap-3">
      <Icon name={icon} class="h-6 w-6" />
      <h3 class="text-lg font-semibold">{name}</h3>
    </div>
    <p class="mb-4 flex-grow text-sm text-muted-foreground">{description}</p>
  </Link>
</div>
